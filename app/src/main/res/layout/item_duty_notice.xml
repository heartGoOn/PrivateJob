<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/duty_notice_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/duty_notice_item_height"
    android:paddingBottom="10dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/notice_point"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/red_point"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/duty_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="标题"
        android:textSize="15sp"
        android:textColor="#333333"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/notice_point"/>

    <TextView
        android:id="@+id/duty_notice_text"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:textColor="#4d4d4d"
        android:text="XXXXXXXXXXXXXXXXXX"
        android:textSize="14sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/duty_notice_title"
        app:layout_constraintLeft_toLeftOf="@+id/duty_notice_title"/>

    <TextView
        android:id="@+id/duty_notice_send"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="发送人"
        android:textColor="#4d4d4d"
        android:textSize="12sp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/duty_notice_text"
        app:layout_constraintTop_toBottomOf="@+id/duty_notice_text"/>
    
    <TextView
        android:id="@+id/duty_notice_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="2017.10.31 15: 23"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>