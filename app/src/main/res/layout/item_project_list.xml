<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_item_height"
    android:minHeight="@dimen/home_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="5dp">



    <ImageView
        android:id="@+id/project_img"
        android:layout_width="95dp"
        android:layout_height="74dp"
        android:layout_marginLeft="15dp"
        android:src="@color/colorGray1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/img_tag"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:src="@mipmap/project_tag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.78"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/project_name_title"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="15dp"
        android:text="项目名称:"
        android:textColor="#333333"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/project_img"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/project_name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="西湖还湖于民"
        android:layout_marginLeft="5dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="10"
        app:layout_constraintLeft_toRightOf="@+id/project_name_title"
        app:layout_constraintTop_toTopOf="@+id/project_name_title"
        app:layout_constraintBottom_toBottomOf="@+id/project_name_title"/>

    <TextView
        android:id="@+id/project_source_title"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="15dp"
        android:text="负责小组:"
        android:textColor="#333333"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/project_img"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/project_team"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="测试小组"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="10"
        app:layout_constraintLeft_toRightOf="@+id/project_source_title"
        app:layout_constraintTop_toTopOf="@+id/project_source_title"
        app:layout_constraintBottom_toBottomOf="@+id/project_source_title"/>

</android.support.constraint.ConstraintLayout>