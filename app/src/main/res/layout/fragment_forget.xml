<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/title1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4d4d4d"
                android:text="手机号"
                android:layout_marginLeft="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/title1"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/title1"
                android:layout_toRightOf="@+id/title1"
                android:background="@color/colorWhite"
                android:hint="请输入手机号码"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:inputType="phone"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/title2"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4d4d4d"
                android:text="验证码"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/title2"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/title2"
                android:layout_toRightOf="@+id/title2"
                android:background="@color/colorWhite"
                android:hint="请输入手机验证码"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:inputType="number"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:background="@drawable/frame_red"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/title3"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4d4d4d"
                android:text="新密码"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/title3"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/title3"
                android:layout_toRightOf="@+id/title3"
                android:background="@color/colorWhite"
                android:hint="请输入新密码"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:inputType="textPassword"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/title4"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4d4d4d"
                android:text="密码确认"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/title4"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/title4"
                android:layout_toRightOf="@+id/title4"
                android:background="@color/colorWhite"
                android:hint="请重新输入新密码"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:inputType="textPassword"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="确认修改"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>