<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/duty_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/duty_item_height"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:background="@drawable/selector_list_item">

    <TextView
        android:id="@+id/duty_item_title"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="标题内容"
        android:textColor="#4d4d4d"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/duty_item_date"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text="2017.10.31 15:21"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/duty_item_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#4d4d4d"
        android:text="XXX"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>