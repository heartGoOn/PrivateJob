<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/duty_person_item_height"
    android:minHeight="@dimen/duty_person_item_height"
    android:background="@color/colorWhite"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/mine_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/duty_person_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="丁晓雯"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/duty_person_status"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:gravity="center"
        android:text="最近活跃4小时前"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintLeft_toLeftOf="@+id/duty_person_name"
        app:layout_constraintTop_toBottomOf="@+id/duty_person_name"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/mine_more"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>